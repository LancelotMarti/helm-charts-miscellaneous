{
    "$schema": "http://json-schema.org/schema#",
    "type": "object",
    "properties": {
        "llm-serving": {
            "type": "object",
            "properties": {
                "nameOverride": {
                    "type": "string",
                    "description": "Overrides the default name for the deployment",
                    "default": ""
                },
                "fullnameOverride": {
                    "type": "string",
                    "x-onyxia": {
                        "hidden": false,
                        "overwriteDefaultWith":"{{project.id}}-{{k8s.randomSubdomain}}-vllm"
                    }
                },
                "podAnnotations": {
                    "type": "object",
                    "description": "Annotations to add to the pod",
                    "default": {}
                },
                "deployment": {
                    "type": "object",
                    "properties": {
                        "image": {
                            "description": "Docker Image",
                            "type": "object",
                            "properties": {
                                "repository": {
                                    "type": "string",
                                    "default": "vllm/vllm-openai",
                                    "enum": [
                                        "vllm/vllm-openai"
                                    ]
                                },
                                "pullPolicy": {
                                    "type": "string",
                                    "description": "option when pulling the docker image",
                                    "default": "Always",
                                    "enum": [
                                        "IfNotPresent",
                                        "Always",
                                        "Never"
                                    ]
                                },
                                "tag": {
                                    "type": "string",
                                    "default": "v0.6.4",
                                    "enum": [
                                        "latest",
                                        "v0.6.4"
                                    ]
                                }
                            }
                        },
                        "hftoken": {
                            "type": "string",
                            "description": "Token for Hugging Face model access",
                            "default": "your_token"
                        },
                        "args": {
                            "type": "object",
                            "properties": {
                                "model": {
                                    "type": "string",
                                    "default": "microsoft/Phi-3-mini-4k-instruct",
                                    "enum": [
                                        "microsoft/Phi-3-mini-4k-instruct"
                                    ],
                                    "description": "Model to be served"
                                },
                                "memoryutilization": {
                                    "type": "number",
                                    "description": "GPU memory utilization",
                                    "default": 0.8
                                },
                                "dtype": {
                                    "type": "string",
                                    "description": "Data type for computation",
                                    "default": "half"
                                },
                                "maxModelLen": {
                                    "type": "integer",
                                    "description": "Maximum model length",
                                    "default": 8208
                                }
                            }
                        },
                        "gpu": {
                            "type": "object",
                            "properties": {
                                "number": {
                                    "type": "integer",
                                    "description": "Number of GPUs to allocate",
                                    "default": 1
                                }
                            }
                        }
                    }
                },
                "service": {
                    "type": "object",
                    "properties": {
                        "port": {
                            "type": "object",
                            "properties": {
                                "number": {
                                    "type": "integer",
                                    "default": 8000,
                                    "description": "The port number the service listens on."
                                },
                                "nodePort": {
                                    "type": "integer",
                                    "default": 30501,
                                    "description": "The NodePort value for the service, must be in the range for NodePorts."
                                }
                            }
                        }
                    }
                },
                "ingress": {
                    "type": "object",
                    "properties": {
                        "annotations": {
                            "type": "object",
                            "properties": {
                                "nginx.ingress.kubernetes.io/proxy-read-timeout": {
                                    "type": "string",
                                    "default": "3600"
                                }
                            }
                        },
                        "enabled": {
                            "type": "boolean",
                            "description": "Enable ingress for the service",
                            "default": true
                        },
                        "className": {
                            "type": "string",
                            "default": "nginx"
                        },
                        "hostname": {
                            "type": "string",
                            "title":"Hostname",
                            "x-onyxia": {
                                "hidden": false,
                                "overwriteDefaultWith": "{{project.id}}-{{k8s.randomSubdomain}}-vllm-{{k8s.domain}}"
                            }
                        }
                    }
                },
                "s3": {
                    "type": "object",
                    "x-onyxia": {
                        "overwriteSchemaWith": "ide/s3.json"
                    },
                    "description": "Configuration of temporary identity",
                    "properties": {
                        "enabled": {
                            "type": "boolean",
                            "description": "Add S3 temporary identity inside your environment",
                            "default": true
                        },
                        "accessKeyId": {
                            "description": "AWS Access Key",
                            "type": "string",
                            "x-onyxia": {
                                "overwriteDefaultWith": "s3.AWS_ACCESS_KEY_ID"
                            },
                            "hidden": {
                                "value": false,
                                "path": "s3/enabled"
                            }
                        },
                        "endpoint": {
                            "description": "AWS S3 Endpoint",
                            "type": "string",
                            "x-onyxia": {
                                "overwriteDefaultWith": "{{s3.AWS_S3_ENDPOINT}}"
                            },
                            "hidden": {
                                "value": false,
                                "path": "s3/enabled"
                            }
                        },
                        "defaultRegion": {
                            "description": "AWS S3 default region",
                            "type": "string",
                            "x-onyxia": {
                                "overwriteDefaultWith": "{{s3.AWS_DEFAULT_REGION}}"
                            },
                            "hidden": {
                                "value": false,
                                "path": "s3/enabled"
                            }
                        },
                        "secretAccessKey": {
                            "description": "AWS S3 secret access key",
                            "type": "string",
                            "render": "password",
                            "x-onyxia": {
                                "overwriteDefaultWith": "{{s3.AWS_SECRET_ACCESS_KEY}}"
                            },
                            "hidden": {
                                "value": false,
                                "path": "s3/enabled"
                            }
                        },
                        "sessionToken": {
                            "description": "AWS S3 session Token",
                            "type": "string",
                            "render": "password",
                            "x-onyxia": {
                                "overwriteDefaultWith": "{{s3.AWS_SESSION_TOKEN}}"
                            },
                            "bucket": {
                                "type": "string",
                                "description": "Name of the S3 bucket",
                                "default": "lmarti"
                            },
                            "modelPath": {
                                "type": "string",
                                "description": "Path to the model within the S3 bucket",
                                "default": "diffusion/models/Phi-3-mini-4k-instruct"
                            }
                        }
                    }
                }
            }
        }
    }
}